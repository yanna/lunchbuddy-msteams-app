{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "TextBlock",
            "text": "%title%",
            "weight": "Bolder",
            "size": "Large",
            "wrap":  true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "NotifyMode:",
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Edit Profile Subteam Names:",
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "%notifyMode%"
                        },
                        {
                            "type": "TextBlock",
                            "text": "%subteamNames%",
                            "wrap": true
                        }
                    ]
                }
            ]
        }
    ]
}