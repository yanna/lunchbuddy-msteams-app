{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "%salutationText%"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Image",
          "horizontalAlignment": "Center",
          "url": "%welcomeCardImageUrl%",
          "width": "424px",
          "height": "248px"
        },
        {
          "type": "TextBlock",
          "text": "%introMessagePart1%",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "%introMessagePart2%",
          "wrap": true,
          "spacing": "Medium"
        },
        {
            "type": "TextBlock",
            "text": "%introMessagePart3%",
            "wrap": true,
            "spacing": "Medium"
        },
        {
            "type": "TextBlock",
            "text": "%suggestedNextStep%",
            "wrap": true,
            "spacing": "Medium"
        }
      ]
    }
  ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "%statusActionText%",
            "data": {
                "msteams": {
                    "type": "messageBack",
                    "displayText": "%statusActionText%",
                    "text": "%statusActionMessageId%"
                }
            }
        },
        {
            "type": "Action.Submit",
            "title": "%editProfileText%",
            "data": {
                "msteams": {
                    "type": "messageBack",
                    "displayText": "%editProfileText%",
                    "text": "editprofile"
                }
            }
        }
    ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}