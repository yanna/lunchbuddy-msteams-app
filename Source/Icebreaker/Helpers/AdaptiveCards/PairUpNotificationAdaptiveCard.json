{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Large",
          "weight": "Bolder",
          "text": "%matchUpCardTitleContent%",
          "wrap": true,
          "maxLines": 2
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "%matchUpCardMatchedText%",
              "wrap": true
            }
          ]
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "%matchUpCardContentPart1%",
              "wrap": true
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "%matchUpCardContentPart2%",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "%chatWithMatchButtonText%",
      "url": "https://teams.microsoft.com/l/chat/0/0?users=%personUpn%&message=Hi"
    },
    {
      "type": "Action.OpenUrl",
      "title": "%proposeMeetupButtonText%",
      "url": "%meetingLink%"
    },
    {
        "type": "Action.Submit",
        "title": "%pauseMatchesButtonText%",
        "data": {
            "msteams": {
                "type": "messageBack",
                "displayText": "%pauseMatchesButtonText%",
                "text": "optout"
            }
        }
    },
    {
        "type": "Action.Submit",
        "title": "%editProfileText%",
        "data": {
            "msteams": {
                "type": "messageBack",
                "displayText": "%editProfileText%",
                "text": "editProfile"
            }
        }
    }
  ],
  "version": "1.0"
}